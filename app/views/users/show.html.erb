<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= image_tag @user.get_profile_image(100,100) %>
      <p>name
      <span><%= @user.name %></span>
      </p>

      <p>introduction
      <span><%= @user.introduction %></span></p>

      <p><%= link_to "マイページ",edit_user_path(@user) %></p>
    </div>



    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>

      <table class="table">
        <thead>
          <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>


          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag @user.get_profile_image(50,50) %></td>
              <td><%= link_to book.title,book %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>