<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      
      
      <h1>New book</h1>
      
      <%= form_with model: @book,local: true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
      
        <h4>Opinion</h4>
        <%= f.text_area :body %>
      
        <%= f.submit 'Create Book',class: "btn btn-success" %>
      
      <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      
      
      <table class="table">
        <thead>
          <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        
        <tbody>
      
        </tbody>
      </table>
    </div>
  </div>
</div>
