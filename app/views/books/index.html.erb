<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>

      <%= image_tag @user.get_profile_image(100,100) %>
      <p>name
      <span><%= @user.name %></span>
      </p>

      <p>introduction
      <span><%= @user.introduction %></span></p>

      <div class="row">
        <%= link_to edit_user_path(@user),class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <h1>New book</h1>

      <%= form_with model: @book,local: true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book',class: "btn btn-success" %>

      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <%= @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(50,50) %></td>
              <td><%= link_to book.title,book %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
